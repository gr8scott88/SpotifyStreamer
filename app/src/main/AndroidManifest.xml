<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nanodegree.nemesisdev.com.spotifystreamer" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activity_Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity_Top10Tracks"
            android:label="@string/title_activity_top10_tracks"
            android:parentActivityName=".Activity_Main" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nanodegree.nemesisdev.com.spotifystreamer.Activity_Main" />
        </activity>
        <activity
            android:name=".Activity_Spotify_Streamer"
            android:label="@string/title_activity_spotify__streamer"
            android:parentActivityName=".Activity_Top10Tracks" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity_Top10Tracks" />
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
