<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Activity_MainFragment"
    android:background="@color/spotifyPrimaryBackground">

    <RelativeLayout
        android:id="@+id/search_bar_full_object"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/search_bar_background">

        <ImageButton
            android:id="@+id/search_bar_search_button"
            style="@style/transparent_image_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/ic_search_black_24dp"
            android:scaleType="fitCenter"/>

        <EditText
            android:right="@id/search_bar_search_button"
            android:id="@+id/search_bar_input_box"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:layout_toRightOf="@id/search_bar_search_button"/>

        <ImageButton
            android:id="@+id/search_bar_clear_search"
            style="@style/transparent_image_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_clear_black_24dp"
            android:visibility="visible"
            android:padding="10dp"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/artist_list"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_bar_full_object"
        />

</RelativeLayout>
