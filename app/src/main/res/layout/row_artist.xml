<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <ImageView
            android:id="@+id/artist_picture"
            android:layout_width="@dimen/thumbail_width"
            android:layout_height="@dimen/thumbnail_height"
            android:background="@color/primary_dark_material_dark"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/artist_name"
            android:text="ARTIST NAME"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="15dp"
            android:textColor="@color/spotifyPrimaryText"
            android:textSize="15sp"/>


    </LinearLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/spotifyAccentColor"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>


</LinearLayout>
